{
  "name": "project-docto",
  "version": "1.0.0",
  "private": true,
  "description": "Healthcare itinerary management for families",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=packages/web",
    "build": "npm run build --workspace=packages/web",
    "clean": "rm -rf packages/web/dist",
    "clean:build": "npm run clean && npm run build",
    "lint": "eslint . --ext .js,.jsx",
    "format": "prettier --write \"**/*.{js,jsx,json,md}\"",
    "deploy": "npm run clean:build && firebase deploy --only hosting",
    "deploy:hosting": "npm run clean:build && firebase deploy --only hosting",
    "deploy:functions": "firebase deploy --only functions",
    "deploy:rules": "firebase deploy --only firestore:rules",
    "deploy:indexes": "firebase deploy --only firestore:indexes",
    "deploy:storage": "firebase deploy --only storage",
    "deploy:all": "npm run clean:build && firebase deploy",
    "serve": "firebase emulators:start",
    "generate-icons": "node generate-icons.js",
    "init:specialties": "node scripts/init-specialties-firestore.js"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "prettier": "^3.2.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "lucide-react": "^0.562.0"
  }
}
