{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Prescription",
  "description": "Prescription document schema",
  "type": "object",
  "required": [
    "id",
    "medicationName",
    "dosage",
    "frequency",
    "quantity",
    "doctorId",
    "doctorSnapshot",
    "datePrescribed",
    "refills",
    "status",
    "created"
  ],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique prescription identifier"
    },
    "itineraryId": {
      "type": "string",
      "description": "Reference to parent itinerary (optional, can also use patientId)"
    },
    "appointmentId": {
      "type": "string",
      "description": "Reference to appointment where prescribed (optional)"
    },
    "medicationName": {
      "type": "string",
      "minLength": 1,
      "maxLength": 200,
      "description": "Brand name of medication"
    },
    "genericName": {
      "type": "string",
      "maxLength": 200,
      "description": "Generic name of medication"
    },
    "dosage": {
      "type": "string",
      "minLength": 1,
      "maxLength": 50,
      "description": "Dosage information (e.g., '10mg', '1 tablet')"
    },
    "frequency": {
      "type": "object",
      "required": ["label", "intervalValue", "intervalUnit"],
      "properties": {
        "label": {
          "type": "string",
          "minLength": 1,
          "maxLength": 100,
          "description": "Human-readable frequency label (e.g., '3 times per day', 'Once daily')"
        },
        "intervalValue": {
          "type": "number",
          "minimum": 0,
          "description": "Numeric interval value"
        },
        "intervalUnit": {
          "type": "string",
          "enum": ["hour", "day", "week", "month", "as_needed"],
          "description": "Unit of the interval"
        }
      },
      "description": "Frequency of medication administration"
    },
    "frequencyText": {
      "type": "string",
      "maxLength": 100,
      "description": "Optional plain-text frequency for display when frequency object is not used"
    },
    "quantity": {
      "type": "integer",
      "minimum": 1,
      "description": "Quantity prescribed (e.g., 30 tablets)"
    },
    "doctorId": {
      "type": "string",
      "description": "Reference to doctor document in doctors collection"
    },
    "doctorSnapshot": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "specialty": { "type": "string" }
      },
      "description": "Cached name/specialty for display without fetching doctor"
    },
    "pharmacyName": {
      "type": "string",
      "maxLength": 200,
      "description": "Name of pharmacy"
    },
    "pharmacyPhone": {
      "type": "string",
      "pattern": "^\\+[1-9]\\d{1,14}$",
      "description": "Pharmacy phone number in E.164 format"
    },
    "rxNumber": {
      "type": "string",
      "maxLength": 50,
      "description": "Prescription number (RX) from pharmacy"
    },
    "corpNumber": {
      "type": "string",
      "maxLength": 50,
      "description": "Corporate/Group number (CORP #)"
    },
    "patientId": {
      "type": "string",
      "description": "Reference to patient (optional; when set, use for queries; can also be via itinerary)"
    },
    "datePrescribed": {
      "type": "string",
      "format": "date-time",
      "description": "Date prescription was issued"
    },
    "refills": {
      "type": "object",
      "required": ["remaining", "total"],
      "properties": {
        "remaining": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of refills remaining"
        },
        "total": {
          "type": "integer",
          "minimum": 0,
          "description": "Total number of refills prescribed"
        }
      }
    },
    "nextRefillDate": {
      "type": "string",
      "format": "date-time",
      "description": "Date when next refill is needed (calculated based on quantity and frequency)"
    },
    "refillReminder": {
      "type": "object",
      "required": ["enabled"],
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true,
          "description": "Whether refill reminder is enabled"
        },
        "daysBefore": {
          "type": "integer",
          "minimum": 1,
          "maximum": 30,
          "default": 7,
          "description": "Days before refill date to send reminder"
        }
      }
    },
    "instructions": {
      "type": "string",
      "maxLength": 1000,
      "description": "Special instructions (e.g., 'Take with food', 'Avoid alcohol')"
    },
    "status": {
      "type": "integer",
      "enum": [1, 2, 3],
      "default": 1,
      "description": "Status: 1=active, 2=completed, 3=discontinued"
    },
    "created": {
      "type": "object",
      "required": ["by", "on"],
      "properties": {
        "by": {
          "type": "string",
          "description": "User ID of creator"
        },
        "on": {
          "type": "string",
          "format": "date-time",
          "description": "Creation timestamp"
        }
      }
    },
    "updated": {
      "type": "object",
      "required": ["by", "on"],
      "properties": {
        "by": {
          "type": "string",
          "description": "User ID of last updater"
        },
        "on": {
          "type": "string",
          "format": "date-time",
          "description": "Last update timestamp"
        }
      }
    },
    "isDeleted": {
      "type": "boolean",
      "default": false,
      "description": "Soft delete flag"
    },
    "intakeRecords": {
      "type": "array",
      "description": "Array of medication intake records. If empty/null, tracking starts today.",
      "items": {
        "type": "object",
        "required": ["takenAt"],
        "properties": {
          "takenAt": {
            "type": "string",
            "format": "date-time",
            "description": "ISO timestamp when medication was taken"
          },
          "markedBy": {
            "type": "string",
            "description": "User ID of person who marked medication as taken"
          },
          "notes": {
            "type": "string",
            "maxLength": 500,
            "description": "Optional notes"
          }
        }
      }
    },
    "trackingStartDate": {
      "type": "string",
      "format": "date",
      "description": "Date when medication tracking should start (defaults to datePrescribed or today)"
    },
    "trackingEndDate": {
      "type": "string",
      "format": "date",
      "description": "Optional end date for medication tracking (e.g., painkiller for 30 days after surgery). Null means ongoing."
    },
    "trackingEnabled": {
      "type": "boolean",
      "default": true,
      "description": "Whether medication intake tracking is enabled"
    }
  }
}

