{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Website Item",
  "description": "Website URL item with type",
  "type": "object",
  "required": ["url", "typeId"],
  "properties": {
    "url": {
      "type": "string",
      "format": "uri",
      "description": "Website URL"
    },
    "typeId": {
      "type": "integer",
      "enum": [1, 2, 3, 4, 5],
      "description": "Website type: 1=Personal, 2=Work, 3=Blog, 4=Portfolio, 5=Other"
    }
  }
}

