{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Patient",
  "description": "Patient information schema",
  "type": "object",
  "required": ["name", "relation"],
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100,
      "description": "Name of person receiving healthcare"
    },
    "relation": {
      "type": "string",
      "enum": ["Self", "Mother", "Father", "Spouse", "Child", "Sibling", "Other"],
      "description": "Relationship to the user managing the itinerary"
    },
    "phones": {
      "type": "array",
      "items": {
        "$ref": "phone-item.schema.json"
      },
      "description": "Array of patient phone numbers"
    },
    "emails": {
      "type": "array",
      "items": {
        "$ref": "email-item.schema.json"
      },
      "description": "Array of patient email addresses"
    },
    "websites": {
      "type": "array",
      "items": {
        "$ref": "website-item.schema.json"
      },
      "description": "Array of patient website URLs"
    },
    "addresses": {
      "type": "array",
      "items": {
        "allOf": [
          {
            "$ref": "address.schema.json"
          },
          {
            "type": "object",
            "properties": {
              "typeId": {
                "type": "integer",
                "enum": [1, 2, 3, 4, 5],
                "description": "Address type: 1=Home, 2=Work, 3=Other, 4=Mailing, 5=Billing"
              },
              "isPrimary": {
                "type": "boolean",
                "default": false,
                "description": "Whether this is the primary address"
              }
            }
          }
        ]
      },
      "description": "Array of patient addresses"
    },
    "vitalSigns": {
      "type": "array",
      "description": "Array of vital sign readings over time",
      "items": {
        "type": "object",
        "required": ["recordedAt"],
        "properties": {
          "recordedAt": {
            "type": "string",
            "format": "date-time",
            "description": "Date/time when vital signs were actually taken (can be manually adjusted)"
          },
          "recordedBy": {
            "type": "string",
            "description": "User ID of person who recorded the vital signs"
          },
          "bloodPressure": {
            "type": "object",
            "properties": {
              "systolic": {
                "type": "integer",
                "minimum": 50,
                "maximum": 250,
                "description": "Systolic blood pressure (mmHg)"
              },
              "diastolic": {
                "type": "integer",
                "minimum": 30,
                "maximum": 150,
                "description": "Diastolic blood pressure (mmHg)"
              }
            }
          },
          "weight": {
            "type": "number",
            "minimum": 0.1,
            "maximum": 1000,
            "description": "Weight in kilograms (kg)"
          },
          "height": {
            "type": "number",
            "minimum": 0.1,
            "maximum": 3,
            "description": "Height in meters (m)"
          },
          "notes": {
            "type": "string",
            "maxLength": 1000,
            "description": "Optional notes about the vital signs reading"
          }
        }
      }
    }
  }
}

