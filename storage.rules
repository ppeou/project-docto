rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users can upload/read/delete files in their own profile directory
    match /users/{userId}/{allPaths=**} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId) && 
                      request.resource.size < 10 * 1024 * 1024; // 10MB limit
      allow delete: if isOwner(userId);
    }
    
    // Doctor notes - users can upload/read/delete files for their own notes
    match /doctor-notes/{userId}/{noteId}/{allPaths=**} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId) && 
                      request.resource.size < 10 * 1024 * 1024; // 10MB limit
      allow delete: if isOwner(userId);
    }
    
    // Prescriptions - users can upload/read/delete files for their own prescriptions
    match /prescriptions/{userId}/{prescriptionId}/{allPaths=**} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId) && 
                      request.resource.size < 10 * 1024 * 1024; // 10MB limit
      allow delete: if isOwner(userId);
    }
    
    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

